{
  "name": "vite-react-typescript-starter",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "typecheck": "tsc --build",
    "lint": "pnpm run --parallel --filter='.' /^lint:*/",
    "lint:eslint": "eslint . --cache --cache-location=./node_modules/.tmp/eslint/.cache",
    "lint:prettier": "prettier --check .",
    "format": "pnpm run --parallel --filter='.' /^format:*/",
    "format:eslint": "pnpm run lint --fix",
    "format:prettier": "prettier . --write",
    "preview": "vite preview",
    "postinstall": "pnpm exec simple-git-hooks"
  },
  "engines": {
    "node": ">=22.x",
    "pnpm": ">=9.15.0"
  },
  "dependencies": {
    "@spred/core": "^0.40.2",
    "@spred/react": "^0.4.2",
    "apcach": "^0.6.4",
    "culori": "^4.0.1",
    "fast-equals": "^5.2.2",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "valibot": "^1.0.0-rc.2"
  },
  "devDependencies": {
    "@hideoo/eslint-config": "^4.0.0",
    "@svgr/webpack": "^8.1.0",
    "@tailwindcss/vite": "^4.0.9",
    "@types/culori": "^2.1.1",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "22",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@vitejs/plugin-react": "^4.3.1",
    "classnames": "^2.3.1",
    "eslint": "^9.20.1",
    "globals": "^15.9.0",
    "lightningcss": "^1.29.1",
    "nano-staged": "^0.8.0",
    "prettier": "^3.5.0",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "simple-git-hooks": "^2.11.1",
    "tailwindcss": "^4.0.9",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.24.0",
    "vite": "^6.1.0",
    "vite-tsconfig-paths": "^5.1.4"
  },
  "simple-git-hooks": {
    "pre-commit": "./node_modules/.bin/nano-staged",
    "pre-push": "pnpm typecheck"
  },
  "nano-staged": {
    "*.{js,cjs,mjs,jsx,ts,mts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "pnpm": {
    "patchedDependencies": {
      "@hideoo/eslint-config@4.0.0": "patches/@hideoo__eslint-config@4.0.0.patch"
    }
  }
}
