{
  "name": "harmonizer",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "core": "pnpm --filter @harmonizer/core",
    "web": "pnpm --filter @harmonizer/web-app",
    "figma": "pnpm --filter @harmonizer/figma-plugin",
    "test": "pnpm --recursive test",
    "test:watch": "pnpm --recursive test:watch",
    "lint": "pnpm --parallel -w /^lint:*/",
    "lint:eslint": "eslint . --cache --cache-location=./node_modules/.tmp/eslint/.cache",
    "lint:prettier": "prettier --check . --experimental-cli",
    "lint:styles": "pnpm stylelint **/*.{css,module.css}",
    "format": "pnpm --parallel -w /^format:*/",
    "format:eslint": "pnpm lint:eslint --fix ",
    "format:prettier": "prettier . --write --experimental-cli",
    "format:styles": "pnpm lint:styles --fix && prettier --write '**/*.{css,module.css}' --experimental-cli",
    "typecheck": "pnpm --recursive --parallel typecheck",
    "postinstall": "pnpm exec simple-git-hooks"
  },
  "engines": {
    "node": ">=22.x"
  },
  "devDependencies": {
    "@eslint/compat": "^2.0.0",
    "@figma/eslint-plugin-figma-plugins": "^0.16.1",
    "@hideoo/eslint-config": "^4.1.1",
    "eslint": "^9.39.1",
    "globals": "^16.5.0",
    "nano-staged": "^0.9.0",
    "prettier": "^3.7.4",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "simple-git-hooks": "^2.13.1",
    "stylelint": "^16.26.1",
    "stylelint-config-clean-order": "^8.0.0",
    "stylelint-config-css-modules": "^4.4.0",
    "stylelint-config-html": "^1.1.0",
    "stylelint-config-standard": "^39.0.1",
    "stylelint-order": "^7.0.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.1"
  },
  "simple-git-hooks": {
    "pre-commit": "./node_modules/.bin/nano-staged",
    "pre-push": "pnpm typecheck"
  },
  "nano-staged": {
    "*.{js,cjs,mjs,jsx,ts,mts,tsx}": [
      "eslint --fix",
      "prettier --write --experimental-cli"
    ],
    "*.html": [
      "prettier --write --experimental-cli"
    ],
    "*.{css,module.css}": [
      "stylelint --fix",
      "prettier --write --experimental-cli"
    ]
  },
  "pnpm": {
    "overrides": {
      "brace-expansion@^1": "^1.1.12",
      "brace-expansion@^2": "^2.0.2"
    },
    "patchedDependencies": {
      "@hideoo/eslint-config@4.1.1": "patches/@hideoo__eslint-config@4.1.1.patch"
    }
  },
  "dependencies": {
    "@zag-js/menu": "^1.30.0",
    "@zag-js/react": "^1.30.0",
    "@zag-js/select": "^1.30.0"
  },
  "packageManager": "pnpm@10.24.0+sha512.01ff8ae71b4419903b65c60fb2dc9d34cf8bb6e06d03bde112ef38f7a34d6904c424ba66bea5cdcf12890230bf39f9580473140ed9c946fef328b6e5238a345a"
}
